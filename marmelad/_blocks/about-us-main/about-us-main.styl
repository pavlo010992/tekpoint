.about-us-main
  padding-top 60px
  padding-bottom 100px
  overflow hidden

  &__inner
    position relative
    z-index 1

  &__image
    margin 0 -20px 35px

  &__content
    margin 0 0 30px

  &__benefits
    display flex
    justify-content center

    &-item
      color: #fff;
      font-weight: 700;
      font-size 12px
      padding-right 20px
      margin-right 20px
      border-right 1px solid #FFFFFF
      line-height: 1.2;

      &:last-child
        margin-right 0
        padding-right 0
        border none

      strong
        display block
        color $orange
        font-size: 24px;

  @media (min-width: $tablet)
    &__content
      width 400px
      margin-bottom 0

    &__image
      position absolute
      left 320px
      top 40px
      bottom 0
      margin 0

      img
        width auto
        height 100%
        max-width none

    &__benefits
      margin-top 40px

      &-item

        strong
          display inline-block
          margin-right 2px

  @media (min-width: $desc)
    padding-top 70px
    padding-bottom 140px
    &__content
      width 490px
      min-height 730px

    &__image
      left 490px
      top 65px

    &__benefits
      margin-top 60px

      &-item
        font-size 18px
        padding-right 70px
        margin-right 70px
        font-weight 500

        strong
          font-size: 72px;
          font-weight 500
