.vacancies-list
  position relative
  padding-top 60px
  padding-bottom 80px
  &__item
    margin-bottom 60px

    &:last-child
      margin-bottom 0

  @media (min-width: $tablet)
    &__list
      display flex
      flex-wrap wrap
      margin-right -20px

    &__item
      margin-right 20px
      flex 0 0 33.333%
      flex-basis calc(33.333% - 20px)
      margin-bottom 0

      &:nth-child(1n + 4)
        margin-top 60px

  @media (min-width: $desc)
    padding-top 80px
    padding-bottom 140px

.vacancies-thumbs
  position relative
  border: 2px solid #FFFFFF;
  border-radius: 5px;
  padding 20px 20px
  min-height 130px
  display flex
  align-items center
  justify-content center
  text-decoration none
  font-weight: 500;
  font-size: 18px;
  line-height: 1.1;
  text-align: center;
  text-transform: uppercase;
  color: #FFFFFF;
  transition all 0.3s ease

