.text-and-image
  padding-top 60px
  padding-bottom 80px
  position relative
  overflow hidden

  &__bg-fon
    position absolute
    left 0
    right 0
    top 0
    bottom 0

    &:before
      content ""
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      background linear-gradient(0deg, rgba(16, 16, 16, 0.84), rgba(16, 16, 16, 0.84))

    img
      width 100%
      height 100%
      object-fit cover

  &__inner
    position relative
    z-index 1

  &__content
    margin-bottom 60px

  &__image-box
    position relative
    padding-top 25px
    padding-right 60px

    &:before
      content ""
      position absolute
      left 64px
      right -9999px
      top 0
      bottom 0
      background $orange
      border-radius: 3px;


  &__image
    position relative
    max-width 650px

    &:before
      content ""
      display block
      padding-top 105%

    img
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      width 100%
      height 100%
      object-fit cover
      border-radius: 3px;


  @media (min-width: $tablet)
    &__inner
      display flex

    &__content
      flex 1 1 0
      margin 0 20px 0 0

    &__image-box
      flex 0 0 54%
      margin-bottom -80px
      margin-top -60px
      padding-top 30px
      padding-right 0
      display flex
      align-items flex-end

      &:before
        border-radius 0

    &__image
      width 100%
      height 100%

      &:before
        display none

  @media (min-width: $desc)
    padding-bottom 150px
    padding-top 100px

    &__content
      flex 1 1 0
      margin 0 20px 0 0

    &__image-box
      margin-bottom -150px
      margin-top -100px
      padding-top 80px

      &:before
        left 158px
