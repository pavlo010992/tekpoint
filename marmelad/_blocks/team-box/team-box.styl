.team-box
  &__list
    margin 40px 10px

  &__item
    margin-bottom 40px
    color #545454

  @media (max-width: $mobile - 1)
    &__item
      &:nth-child(2n)
        color $orange

      .team-thumbs
        &__top-content
          &:after
            content ""
            position absolute
            left -10px
            right -10px
            top 8px
            bottom 8px
            border-radius: 2px;
            background currentColor

  @media (min-width: $mobile)
    &__list
      display flex
      flex-wrap wrap
      margin-right -15px

    &__item
      flex 0 0 50%
      margin-right 25px
      flex-basis calc(50% - 25px)

  @media (min-width: $mobile) and (max-width: $tablet - 1)
    &__item
      .team-thumbs
        &__top-content
          &:after
            content ""
            position absolute
            top 8px
            bottom 8px
            border-radius: 2px;
            background currentColor

      &:nth-child(4n + 4),
      &:nth-child(4n + 3)
        color $orange

      &:nth-child(2n + 1)
        .team-thumbs
          &__top-content
            &:after
              left -10px
              right 50%

      &:nth-child(2n + 2)
        .team-thumbs
          &__top-content
            &:after
              right -10px
              left 50%

      &:last-child
        .team-thumbs
          &__top-content
            &:after
              right -10px

  @media (min-width: $tablet)
    &__list
      margin-right -8px

    &__item
      margin-right 18px
      flex-basis calc(33.333% - 18px)

      .team-thumbs
        &__top-content
          &:after
            content ""
            position absolute
            top 8px
            bottom 8px
            border-radius: 4px;
            background currentColor

      &:nth-child(6n + 4),
      &:nth-child(6n + 5),
      &:nth-child(6n + 6)
        color $orange

      &:nth-child(3n + 1)
        .team-thumbs
          &__top-content
            &:after
              left -10px
              right 50%

      &:nth-child(3n + 3)
        .team-thumbs
          &__top-content
            &:after
              right -10px
              left 50%

      &:last-child
        .team-thumbs
          &__top-content
            &:after
              min-width 50%
              right -10px

  @media (min-width: $desc)
    &__list
      margin-right -18px
      margin-top 60px
      margin-left 0

    &__item
      .team-thumbs
        &__top-content
          &:after
            top 20px
            bottom 20px

      &:nth-child(3n + 1)
        .team-thumbs
          &__top-content
            &:after
              left -20px

      &:nth-child(3n + 3)
        .team-thumbs
          &__top-content
            &:after
              right -20px

      &:last-child
        .team-thumbs
          &__top-content
            &:after
              right -20px
