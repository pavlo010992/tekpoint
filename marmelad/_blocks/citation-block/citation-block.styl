.citation-block
  overflow hidden
  &__inner
    display flex
    align-items center

  &__body
    flex 1 0 50%
    padding-top 110px
    padding-bottom 110px
    position relative

    &:before
      content ""
      position absolute
      left -9999px
      right -9999px
      top 0
      bottom 0
      background $orange

  &__content
    position relative

  &__text
    font-size 16px
    color #fff
    line-height 1.4
    font-weight 500
    margin-bottom 15px

  &__author
    font-size 12px
    font-weight 300
    line-height 1.3
    text-align right

  &__photo
    flex 1 0 50%
    flex-basis calc(50% - 20px)
    max-width 388px
    width 100%
    position relative
    z-index 1
    margin-right 20px

    &:after
      content ""
      position absolute
      left -10px
      top 8px
      bottom 8px
      width 50%
      background: #545454;
      border-radius: 2px;

    &:before
      content ""
      display block
      padding-top 150%

    img
      position absolute
      left 0
      right 0
      top 0
      bottom 0
      width 100%
      height 100%
      object-fit cover
      border-radius: 5px;
      z-index 1

  @media (min-width: $mobile + 150)
    &__photo
      flex 1 1 0

    &__body
      flex 1 0 170px

  @media (min-width: $desc)

    &__body
      padding-top 100px
      padding-bottom 50px

    &__text
      font-size 34px
      color #fff
      line-height 1.3
      font-weight 600
      margin-bottom 20px

    &__author
      font-size 20px

    &__photo
      margin-right 50px

      &:after
        content ""
        position absolute
        left -20px
        top 20px
        bottom 20px
        border-radius: 5px;

      img
        border-radius: 5px;
