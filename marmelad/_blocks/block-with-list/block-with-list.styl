.block-with-list
  position relative
  padding-top 60px
  padding-bottom 80px
  overflow hidden

  &__bg-fon
    position absolute
    left 0
    right 0
    top 0
    bottom 0

    &:before
      content ""
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      background linear-gradient(0deg, rgba(16, 16, 16, 0.74), rgba(16, 16, 16, 0.74))

    img
      width 100%
      height 100%
      object-fit cover

  &__inner
    position relative
    z-index 1

  &__long-image
    position relative
    margin 0 -20px 50px
    height 80px
    filter grayscale(1)

    img
      width 100%
      height 100%
      object-fit cover

  &__list-image
    display none

  &__list
    counter-reset: item;
    margin-top -30px
    margin-bottom 30px

  &__button
    text-align center

  &__text
    margin-top 40px

  &__item
    border-bottom 1px solid #7C7C7C
    font-weight: 400;
    font-size: 18px;
    line-height: 1.3;
    text-transform: uppercase;
    color: #FFFFFF;
    padding 60px 0 60px 30px
    position relative

    > span
      position relative
      display block

      .description-list
        display block
        font-weight: 300;
        font-size: 14px;
        line-height: 1.3;
        color: #FFFFFF;
        margin-top 10px
        text-transform initial

    &:nth-child(1n + 10)
      &:before
        content: counter(item) '/';

    &:before
      content: '0'counter(item) '/';
      counter-increment: item;
      position: absolute;
      left: 0;
      top: 35px;
      -webkit-text-stroke: 1px #fff;
      color: transparent;
      font-size: 40px;
      font-weight: 700;
      line-height: 1;
      opacity: .35;
      text-transform: uppercase;
      pointer-events none


    &:last-child
      border-bottom none
      padding-bottom 0


  @media (min-width: $tablet)
    &__item
      padding-top 40px
      padding-bottom 40px

      &:before
        top 20px

    &__list
      flex 1 1 0
      &-wrap
        display flex
        align-items flex-start

        &--image-right
          .block-with-list__list
            &-content
              order 2
              margin-left 40px
              margin-right 0

              .block-with-list__list-button
                text-align left

              .block-with-list__list-image
                &:before
                  left 50%
                  right -20px

      &-content
        flex 0 0 300px
        margin-right 40px
        order -1

      &-image
        display block
        position relative

        img
          border-radius: 6px;
          position relative

        &:before
          content ""
          position absolute
          right 50%
          left -20px
          top 20px
          bottom 20px
          border-radius: 4px;
          background $orange

    &__long-image
      margin 0 -25px 50px

    &__button
      text-align right

    &__text
      margin-top 0
      margin-bottom 90px

  @media (min-width: $desc)
    padding-top 80px
    padding-bottom 100px

    &__list
      margin-top 0

      &-content
        flex 0 0 388px
        padding-top 20px

    &__item
      font-weight: 500;
      font-size: 22px;
      padding 40px 0 40px 95px

      > span
        .description-list
          font-size 16px
          margin-top 15px

      &:before
        top: 20px;
        font-size: 58px;

    &__long-image
      height 178px
      margin 0 -1000px 70px
      text-align center

      img
        object-fit contain
