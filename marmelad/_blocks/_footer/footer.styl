    padding-bottom 45px

    &__top
      margin-bottom 60px
    &__bottom
      padding-top 70px

    &__middle
      display flex

    &__offices
      padding 0
      margin 0
      border none
      flex 0 0 60%
      &-body
        display flex !important
        padding 0

      &-title
