    &-body
      padding-bottom 30px
      font-style: normal;
      font-weight: 400;
      font-size: 16px;
      color: #B9B9B9;
      display none

    &-item
      margin-bottom 8px

      &:last-child
        margin-bottom 0

      a[href^="tel"]
        color #B9B9B9
        text-decoration none

  @media (min-width: $tablet)
    &__logo
      flex 0 0 250px

  @media (min-width: $desc)
