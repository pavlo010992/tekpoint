.footer
  flex none
  border-top 1px solid #7C7C7C
  padding-top 60px
  padding-bottom 25px

  &__bottom
    padding-top 30px

  &__top
    display flex
    align-items center
    justify-content space-between
    margin-bottom 10px

  &__callback
    flex 1 1 0
    text-align right
    @media (max-width: $tablet - 1)
      max-width 164px
      .site-btn
        font-size 8px
        min-width 0
        width 100%
        padding 10px 10px
        border-width 2px

  &__logo
    flex 0 0 140px
    margin-right 20px

  &__copyright
    font-weight: 500;
    font-size: 16px;
    line-height: 1;
    text-align: center;
    color: #2F2F2F;

  &__social
    &-title
      display none

    &-body
      font-size 0
      line-height 1
      text-align center

    &-item
      position relative
      display inline-block
      vertical-align middle
      text-decoration none
      width 28px
      height 28px
      margin 0 15px
      color #ffffff

      img
        position absolute
        left 50%
        top 50%
        transform translate(-50%, -50%)
        max-width 28px
        max-height 28px
        transition opacity 0.3s ease

      img.hover
        opacity 0

      &:hover
        img:not(.hover)
          opacity 0

        img.hover
          opacity 1

