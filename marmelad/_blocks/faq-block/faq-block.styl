.faq-block
  position relative
  padding-top 60px
  padding-bottom 80px

  &__bg-fon
    position absolute
    left 0
    right 0
    top 0
    bottom 0

    &:before
      content ""
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      background linear-gradient(0deg, rgba(16, 16, 16, 0.69), rgba(16, 16, 16, 0.69))

    img
      width 100%
      height 100%
      object-fit cover

  &__inner
    position relative
    z-index 1

  &__item
    border-bottom 1px solid #FFFFFF
    position relative

