    &-name
      font-weight: 500;
      font-size: 18px;
      padding 20px 25px 20px 0;
      cursor pointer
      text-transform uppercase

    &-body
      font-weight: 300;
      font-size: 14px;
      line-height: 150%;
      color: #FFFFFF
      padding-bottom 60px
      display none

  @media (min-width: $desc)
    padding-top 140px
    padding-bottom 140px

    &__item
      border-width 2px

      &.opened
        &:before
          top 30px

        & ^[0]
          &__item-name
            color $orange

      &:before
        top 35px

      &-name
        font-size: 22px;
        padding 25px 25px 25px 0;

      &-body
        font-size: 16px;
