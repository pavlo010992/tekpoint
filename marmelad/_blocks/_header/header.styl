.header
  position relative
  z-index 2
  flex none
  background rgba(16, 16, 16, 0.6)
  border-bottom 1px solid rgba(124, 124, 124, 0.23)
  margin-bottom 50px

  &__inner
    margin 0 auto
    padding-top 30px
    padding-bottom 30px
    display flex
    align-items center

  &__middle
    display none

  &__left
    flex 0 0 140px
    margin-right 10px

  &__right
    flex 1 1 0
    display flex
    justify-content flex-end
    align-items center
    line-height 1

  &__search
    display none

  &__burger-btn
    margin-right -6px

    button
      width 40px
      height 40px
      border none
      cursor pointer
      outline none
      box-shadow none
      background url("data:image/svg+xml,%3Csvg width='34' height='22' viewBox='0 0 34 22' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='34' height='2' rx='1' fill='white'/%3E%3Crect y='10' width='34' height='2' rx='1' fill='white'/%3E%3Crect y='20' width='34' height='2' rx='1' fill='white'/%3E%3C/svg%3E%0A") 50% 50% no-repeat

  &__language
    margin-right 20px
    position relative
    height 26px
    width 38px

    ul
      position absolute
      left 0
      right 0
      top 0
      padding 0
      margin 0
      list-style none
      display flex
      flex-direction column
      background url("data:image/svg+xml,%3Csvg width='12' height='6' viewBox='0 0 12 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.99059 5.99797C5.79067 5.99836 5.59692 5.92865 5.44298 5.80093L0.309104 1.51743C0.134367 1.37202 0.0244811 1.16306 0.00362066 0.936524C-0.0172397 0.70999 0.0526339 0.484437 0.19787 0.309485C0.343106 0.134532 0.551808 0.0245113 0.778063 0.00362514C1.00432 -0.017261 1.22959 0.0526984 1.40433 0.198113L5.99059 4.03613L10.5768 0.335186C10.6644 0.264023 10.7651 0.210881 10.8732 0.178813C10.9813 0.146745 11.0946 0.136385 11.2068 0.148326C11.3189 0.160268 11.4275 0.194276 11.5265 0.248397C11.6254 0.302518 11.7127 0.375685 11.7833 0.463691C11.8617 0.551778 11.921 0.655119 11.9576 0.767238C11.9942 0.879357 12.0073 0.99784 11.9961 1.11526C11.9848 1.23268 11.9495 1.34652 11.8923 1.44963C11.835 1.55273 11.7572 1.6429 11.6635 1.71447L6.52964 5.85233C6.37128 5.95986 6.18148 6.01114 5.99059 5.99797Z' fill='white'/%3E%3C/svg%3E%0A") 100% 10px no-repeat

      li
        display none
        &.active
          order -1
          display block

        &:not(.active)
          > a:hover
            color $orange
        a
          display block
          text-decoration none
          font-size 16px
          font-weight 500
          line-height 1
          padding 5px 16px 5px 0
          color #fff

  @media (min-width: $mobile)
    &__left
      margin-right 15px
    &__search
      display block
      flex 1 0 90px
      margin-right 20px
      max-width 145px

      form
        position relative
        height 20px

        input[type="search"],
        input[type="text"]
          position absolute
          left 0
          right 0
          top 0
          bottom 0
          height 20px
          border none
          padding 0 24px 0 10px
          background rgba(255, 255, 255, 0.15)
          border-radius 15px
          outline none
          color #fff

        button
          position absolute
          right 0
          top 0
          bottom 0
          width 24px
          border none
          box-shadow none
          outline none
          background url("data:image/svg+xml,%3Csvg width='11' height='11' viewBox='0 0 11 11' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath fill-rule='evenodd' clip-rule='evenodd' d='M7.87879 7.09416L10.8377 10.0531C10.9417 10.1572 11.0001 10.2983 11 10.4454C10.9999 10.5926 10.9415 10.7336 10.8374 10.8376C10.7333 10.9417 10.5922 11.0001 10.4451 11C10.2979 10.9999 10.1568 10.9415 10.0528 10.8374L7.09398 7.87844C6.20946 8.56355 5.09717 8.88595 3.98339 8.78006C2.86961 8.67418 1.838 8.14795 1.09842 7.30844C0.358845 6.46893 -0.0331442 5.37919 0.00219788 4.26092C0.03754 3.14265 0.497559 2.07984 1.28867 1.2887C2.07979 0.497571 3.14257 0.0375409 4.26081 0.00219793C5.37906 -0.0331451 6.46876 0.358854 7.30825 1.09845C8.14775 1.83805 8.67396 2.86968 8.77984 3.98349C8.88573 5.0973 8.56333 6.20962 7.87824 7.09416H7.87879ZM4.4002 7.69969C5.27538 7.69969 6.11471 7.35202 6.73355 6.73317C7.35239 6.11431 7.70005 5.27496 7.70005 4.39976C7.70005 3.52457 7.35239 2.68522 6.73355 2.06636C6.11471 1.44751 5.27538 1.09984 4.4002 1.09984C3.52503 1.09984 2.6857 1.44751 2.06686 2.06636C1.44802 2.68522 1.10036 3.52457 1.10036 4.39976C1.10036 5.27496 1.44802 6.11431 2.06686 6.73317C2.6857 7.35202 3.52503 7.69969 4.4002 7.69969Z' fill='white'/%3E%3C/svg%3E%0A") 50% 50% no-repeat

  @media (min-width: $tablet)

    &__search
      margin-right 50px

      form
        height 32px

        input[type="search"],
        input[type="text"]
          height 32px
          padding-right 40px

        button
          background-size 18px auto
          width 40px

    &__language
      width 40px

      ul
        li
          a
            padding 5px 20px 5px 0

  @media (min-width: $desc)
    &__inner
      padding-top 0
      padding-bottom 0


    &__burger-btn
      display none

    &__language
      margin-right 0
      flex 0 0 40px

    &__middle
      display block
      flex 1 1 0

    &__right
      flex 0 0 260px

    &__search
      flex 0 0 145px

  @media (min-width: $full)
    &__left
      flex 0 0 250px

.head-menu
  > ul
    padding 0
    margin 0
    list-style none
    font-size 0
    text-align center

    > li
      position relative
      display inline-block
      vertical-align top
      border-bottom 2px solid transparent

      &.active
        border-color $orange

      &:hover
        border-color $orange

        > ul
          display block

      > a
        display block
        text-decoration none
        font-weight: 500;
        font-size: 16px;
        line-height: 1;
        color: #FFFFFF
        padding 55px 10px
        text-transform uppercase

      > ul
        position absolute
        left -10px
        top 100%
        background #101010
        width 350px
        padding 30px 20px 30px 45px
        margin 0
        margin-top 2px
        list-style none
        text-align left
        display none
        z-index 1

        li
          margin-bottom 15px
          li
            margin-left 10px
          a
            color #fff
            text-decoration none
            position relative
            display inline-block
            padding-left 15px
            font-size 16px
            font-weight 500

            &:before
              content ""
              position absolute
              left 0
              top 50%
              width 8px
              height 8px
              margin-top -4px
              background url("data:image/svg+xml,%3Csvg width='9' height='9' viewBox='0 0 9 9' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M4.48505 5.30911e-08C3.59807 -0.00013664 2.73097 0.263685 1.99341 0.758099C1.25586 1.25251 0.68098 1.95531 0.341484 2.7776C0.00198865 3.5999 -0.0868735 4.50476 0.0861343 5.37774C0.259142 6.25071 0.68625 7.0526 1.31344 7.68198C1.94063 8.31136 2.73973 8.73995 3.60967 8.91357C4.47961 9.08718 5.38133 8.998 6.20076 8.65732C7.0202 8.31664 7.72055 7.73976 8.21325 6.99963C8.70594 6.25951 8.96885 5.38938 8.96871 4.49931C8.96598 3.30686 8.49272 2.16403 7.65246 1.32084C6.8122 0.47765 5.67335 0.00273818 4.48505 5.30911e-08ZM4.48505 7.09522C3.97338 7.09536 3.47316 6.94323 3.04766 6.65807C2.62216 6.37291 2.29048 5.96753 2.09458 5.4932C1.89868 5.01887 1.84735 4.4969 1.94709 3.99329C2.04683 3.48969 2.29315 3.02708 2.6549 2.66396C3.01666 2.30085 3.4776 2.05354 3.97942 1.95332C4.48125 1.8531 5.00143 1.90447 5.47416 2.10093C5.94689 2.29739 6.35095 2.63011 6.63523 3.05702C6.91951 3.48393 7.07125 3.98585 7.07125 4.49931C7.10224 5.94379 5.92864 7.09246 4.48505 7.09246V7.09522Z' fill='%23EB690F'/%3E%3Cpath d='M4.48522 5.7654C5.1836 5.7654 5.74974 5.19728 5.74974 4.49647C5.74974 3.79566 5.1836 3.22754 4.48522 3.22754C3.78685 3.22754 3.2207 3.79566 3.2207 4.49647C3.2207 5.19728 3.78685 5.7654 4.48522 5.7654Z' fill='%23B2B4B4'/%3E%3C/svg%3E%0A") 0 0 no-repeat
              background-size contain
              opacity 0.24
              transition opacity 0.3s ease-in

            &:hover
              text-decoration underline

              &:before
                opacity 1



  @media (min-width: $full)
    > ul
      > li
        margin 0 5px
