    a
      color $orange
      text-decoration none

  &__name
    font-weight: 400;
    font-size: 18px;
    line-height: 1.1;
    text-transform: uppercase;
    color: #FFFFFF;

  &__status
    font-weight: 300;
    font-size: 14px;
    line-height: 1.1;
    color: #7C7C7C;

  @media (min-width: $desc)
    &__top

      &-content
        margin-bottom 30px

    &__information
      padding 25% 10px 10px

    &__qr
      margin-bottom 70px

    &__phone
      font-size: 16px;

    &__name
      font-size: 22px;

    &__status
      font-size: 16px;
