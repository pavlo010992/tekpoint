.team-thumbs
  position relative
  height 100%
  display flex
  flex-direction column

  &:hover
    & ^[0]
      &__information
        opacity 1
        visibility visible

  &__top
    flex 1 0 auto
    margin-bottom 10px

    &-content
      position relative
      margin-bottom 12px

      &:before
        content ""
        display block
        padding-top 150%

  &__image
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    z-index 1
    background #fff
    border-radius: 6px;

    img
      width 100%
      height 100%
      object-fit cover
      border-radius: 6px;

  &__information
    position absolute
    left 0
    right -1px
    top 0
    bottom 0
    border-radius: 3px;
    display flex
    flex-direction column
    align-items center
    background: linear-gradient(0deg, rgba(16, 16, 16, 0.81), rgba(16, 16, 16, 0.81));
    padding 15% 10px 10px
    opacity 0
    visibility hidden
    transition opacity 0.3s ease-in-out
    z-index 1
    backdrop-filter: blur(37.5378px);
    border-radius: 6px;
    overflow hidden

    &--view
      opacity 1
      visibility visible

  &__qr
    width 47%
    text-align center
    margin-bottom 20px

  &__phone
    padding-top 22px
    text-align center
    font-weight: 500;
    font-size: 12px;
    line-height: 1;
    color: $orange;
