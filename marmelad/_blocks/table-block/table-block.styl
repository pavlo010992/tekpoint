.table-block
  position relative
  padding-top 60px
  padding-bottom 80px

  &__bg-fon
    position absolute
    left 0
    right 0
    top 0
    bottom 0

    &:before
      content ""
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      background linear-gradient(0deg, rgba(16, 16, 16, 0.77), rgba(16, 16, 16, 0.77))

    img
      width 100%
      height 100%
      object-fit cover

  &__inner
    position relative
    z-index 1


  &__table-head
    display none

  &__table-params
    display flex
    align-items center
    justify-content center
    background $orange
    border-radius: 4px;
    padding 15px 10px

    &-name
      font-weight: 500;
      font-size: 18px;
      line-height: 1.1;
      text-transform: uppercase;
      color: #FFFFFF;

    &-icon
      flex 0 0 auto
      height 50px
      display flex
      align-items center
      justify-content center
      margin-right 20px

      img
        max-width 50px
        max-height 50px

  &__table-row
    border-bottom 1px solid #FFFFFF
    position relative

    &.opened
