      & ^[0]
        &__table-row-name
          color $orange

    &:before
      content ""
      position absolute
      right 0
      top 27px
      width 12px
      height 12px
      background url("data:image/svg+xml,%3Csvg width='12' height='6' viewBox='0 0 12 6' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.99059 5.99797C5.79067 5.99836 5.59692 5.92865 5.44298 5.80093L0.309104 1.51743C0.134367 1.37202 0.0244811 1.16306 0.00362066 0.936524C-0.0172397 0.70999 0.0526339 0.484437 0.19787 0.309485C0.343106 0.134532 0.551808 0.0245113 0.778063 0.00362514C1.00432 -0.017261 1.22959 0.0526984 1.40433 0.198113L5.99059 4.03613L10.5768 0.335186C10.6644 0.264023 10.7651 0.210881 10.8732 0.178813C10.9813 0.146745 11.0946 0.136385 11.2068 0.148326C11.3189 0.160268 11.4275 0.194276 11.5265 0.248397C11.6254 0.302518 11.7127 0.375685 11.7833 0.463691C11.8617 0.551778 11.921 0.655119 11.9576 0.767238C11.9942 0.879357 12.0073 0.99784 11.9961 1.11526C11.9848 1.23268 11.9495 1.34652 11.8923 1.44963C11.835 1.55273 11.7572 1.6429 11.6635 1.71447L6.52964 5.85233C6.37128 5.95986 6.18148 6.01114 5.99059 5.99797Z' fill='white'/%3E%3C/svg%3E%0A") 100% 50% no-repeat
      background-size 12px auto

    &-name
      font-weight: 500;
      font-size: 18px;
      padding 20px 25px 20px 0;
      cursor pointer
      text-transform uppercase

    &-content
      padding-top 20px
      display none

    &-value
      padding-bottom 60px
      margin-bottom 60px
      border-bottom 1px solid #7C7C7C
      @media (max-width: $desc - 1)
        display block !important

      &:last-child
        margin-bottom 0
        border none

    &-value-body
      padding-top 25px

  @media (min-width: $desc)
    padding-top 80px
    padding-bottom 100px


    &__table
      overflow hidden
    &__table-head
      display flex
      margin-right -20px
      margin-bottom 30px

      .table-block__table-params
        position relative

        > *
          position relative
          z-index 1

        &:after
          content ""
          position absolute
          left 0
          right 0
          top 0
          bottom 0
          border-radius 4px
          background $orange
        &:nth-child(2n)
          &:before
            background #fff
        &:before
          content ""
          position absolute
          right 0
          top 100%
          bottom -10000px
          width 1px
          background $orange
          opacity 0.4
          margin-top -5px

    &__table-params
      flex 0 0 20%
      flex-basis calc(20% - 20px)
      margin-right 20px
      padding 18px 10px

      &-name
        @media (min-width: $full)
          font-size: 22px;


    &__table-row
      border none
      display flex
      padding 30px 0
      margin-right -20px
      cursor pointer
      transition padding 0.4s ease-in

      &.opened
        padding 50px 0

      &:after
        content ""
        position absolute
        left 0
        right 20px
        bottom 0
        border-bottom 2px solid #FFFFFF

      &:before
        content ""
        position absolute
        right 40px
        top 35px

      &-name
        font-weight: 600;
        padding 0;
        cursor default
        flex 0 0 20%
        flex-basis calc(20% - 20px)
        margin-right 20px

      &-content
        flex 0 0 80%
        padding-top 0
        display flex !important

      &-value
        border none
        padding 0 30px 0 10px
        margin 0
        flex 0 0 25%
        display none

        .table-block__table-params
          display none

      &-value-body
        padding-top 0
        font-weight 300
