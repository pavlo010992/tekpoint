      background-size contain

  @media (min-width: $desc)
    padding-top 86px
    padding-bottom 150px

    &__top-slider
      margin-bottom 25px

    .swiper-scrollbar-wrap
      padding 12px 5px 5px
      margin 40px 130px 0

    .swiper-scrollbar-drag
      cursor pointer

      &:before
        right 20px

      &:after
        margin-top -10px
        width 20px
        height 20px

.brand-thumbs
  border 3px solid transparent
  position relative
  border-radius: 5px;
  transition all 0.3s ease

  &:hover
    border-color $orange
    img
      &:not(.hover)
        opacity 0

      &.hover
        opacity 1

  &:before
    content ""
    display block
    padding-top 40%

  img
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)
    max-width 60%
    max-height 30%
    width auto
    height auto
    transition opacity 0.3s ease
    &.hover
      opacity 0
