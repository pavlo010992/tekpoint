.brand-porfolio
  position relative
  padding-top 60px
  padding-bottom 144px

  &__bg-fon
    position absolute
    left 0
    right 0
    top 0
    bottom 0

    &:before
      content ""
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      background linear-gradient(0deg, rgba(16, 16, 16, 0.74), rgba(16, 16, 16, 0.74))

    img
      width 100%
      height 100%
      object-fit cover

  .swiper
    &:not(.swiper-initialized)
      .swiper-slide
        max-width 312px

  &__top-slider
    margin-bottom 15px

  &__bottom-slider
    margin 0 15%
    &:not(.swiper-initialized)
      display none

  .swiper-scrollbar-wrap
    overflow hidden
    padding 10px 5px 5px
    margin 40px 0 0
    line-height 1
    font-size 0
    border-radius 2px

  .swiper-scrollbar
    position relative
    background: rgba(217, 217, 217, 0.31);
    height 4px
    border-radius 2px
    left auto
    right auto
    width auto

  .swiper-scrollbar-drag
    background none
    position relative

    &:before
      content ""
      position absolute
      left -1000px
      right 12px
      top 0
      bottom 0
      background $orange

    &:after
      content ""
      position absolute
      right 0
      top 50%
      margin-top -6px
      width 12px
      height 12px
