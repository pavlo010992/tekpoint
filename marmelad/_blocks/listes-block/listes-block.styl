.listes-block
  padding-top 60px
  padding-bottom 50px

  &__title
    margin-bottom 30px

  &__item
    margin-bottom 60px

  @media (min-width: $tablet)
    &__list
      display flex
      flex-wrap wrap
      margin-right -18px

    &__item
      flex 0 0 50%
      flex-basis calc(50% - 18px)
      margin-bottom 25px
      margin-right 18px

    &__row
      display flex

    &__column
      &-left
        margin-bottom 0
        margin-right 60px
        flex 1 1 0

      &-right
        text-align left
        flex 0 0 auto

  @media (min-width: $desc)
    padding-top 100px
    padding-bottom 60px

    &__title
      margin-bottom 35px

    &__item
      flex-basis calc(33.333% - 18px)

.services-thumbs
  height 100%
  display block
  text-decoration none
  color #fff


  &__image
    position relative
    margin-bottom 25px
    display block

    &:after
      content ""
      position absolute
      bottom -20px
      right 20px
      width 40px
      height 40px
