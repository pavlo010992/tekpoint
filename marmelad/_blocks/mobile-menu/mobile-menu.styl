.mobile-menu
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  opacity 0
  visibility hidden
  transition all 0.3s ease-in-out
  z-index 5

  @media (min-width: $desc)
    display none
  &.opened
    opacity 1
    visibility visible
    transition all 0s ease-in-out
    & ^[0]
      &__inner
        transform translateX(0)


  &__inner
    height 100%
    max-height 100%
    width 300px
    background #101010
    overflow auto
    position relative
    margin-left auto
    padding 80px 0 20px 20px
    transform translateX(300px)
    transition all 0.3s ease-in-out

  &__close
    position absolute
    right 8px
    top 8px
    width 40px
    height 40px
    border none
    box-shadow none
    outline none
