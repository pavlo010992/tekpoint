        text-transform uppercase
        text-decoration none
        color #fff
        font-size 18px
        line-height 1
        font-weight 500
        padding 22px 40px 22px 0
        position relative

      > ul
        padding 0 0 1px
        margin 0
        list-style none
        text-align left
        display none

